<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#63939292"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtYarimIllik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_textview_mainpage"
        android:text="KSQ-lərin sayını seçib açılan pəncərədə Yarımİllik qiyməti hesablaya bilərsiniz"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:padding="15dp"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@id/txtYarimIllik"
        android:layout_marginTop="30dp"
        >
        <Button
            android:padding="2dp"
            android:id="@+id/ksq3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/custom_button_mainpage"
            android:text="3"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:onClick="ksq3Hesabla"
            />

        <Button
            android:id="@+id/ksq4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/custom_button_mainpage"
            android:text="4"
            android:layout_marginRight="5dp"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:onClick="ksq4Hesabla"
            />

        <Button
            android:id="@+id/ksq5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/custom_button_mainpage"
            android:text="5"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:onClick="ksq5Hesabla"
            android:layout_marginRight="5dp"
            />

        <Button
            android:id="@+id/ksq6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/custom_button_mainpage"
            android:text="6"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:onClick="ksq6Hesabla"
            />

    </LinearLayout>



</RelativeLayout>